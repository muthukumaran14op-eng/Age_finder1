  <div class="container">
    <h1>Age Finder</h1>

    <label>Select your Date of Birth</label>
    <input type="date" id="dob">

    <button onclick="calculateAge()">Find Age</button>

    <p id="result"></p>
  </div>

  <script src="script.js"></script>
